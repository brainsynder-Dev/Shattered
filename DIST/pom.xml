<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.bsdevelopment.shattered</groupId>
        <artifactId>Shattered</artifactId>
        <version>1</version>
    </parent>

    <artifactId>DIST</artifactId>
    <version>${module.version}</version>

    <properties>
        <module.info>-NOT-MERGED</module.info>
    </properties>

    <dependencies>
        <dependency>
            <groupId>${parent.groupId}</groupId>
            <artifactId>NMS_Master</artifactId>
            <version>${module.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>${parent.groupId}</groupId>
            <artifactId>MAIN</artifactId>
            <version>${module.version}</version>
            <scope>compile</scope>
            <exclusions>
                <exclusion>
                    <groupId>lib.brainsynder</groupId>
                    <artifactId>API</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>com.github.thatsmusic99</groupId>
                    <artifactId>ConfigurationMaster-API</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>io.github.skytasul</groupId>
                    <artifactId>glowingentities</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>fr.mrmicky</groupId>
                    <artifactId>fastboard</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>${parent.groupId}</groupId>
            <artifactId>Version_1.19</artifactId>
            <version>${module.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>${parent.groupId}</groupId>
            <artifactId>Version_1.19.1</artifactId>
            <version>${module.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>${parent.groupId}</groupId>
            <artifactId>Version_1.19.2</artifactId>
            <version>${module.version}</version>
            <scope>compile</scope>
        </dependency>
    </dependencies>

    <build>
        <resources>
            <resource>
                <targetPath>.</targetPath>
                <filtering>true</filtering>
                <directory>../src/resources/</directory>
                <includes>
                    <include>*.yml</include>
                    <include>*.properties</include>
                    <include>*.txt</include>
                </includes>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <finalName>Shattered</finalName>
                    <appendAssemblyId>false</appendAssemblyId>
                </configuration>
                <version>3.3.0</version>
                <executions>
                    <execution>
                        <id>package-all</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <appendAssemblyId>false</appendAssemblyId>
                            <descriptors>
                                <descriptor>src/assembly/all-jar.xml</descriptor>
                            </descriptors>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>